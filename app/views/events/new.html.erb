<h3 class="form-title">Cadastre um tipo de evento para o <%= @venue.brand_name %>:</h3>

<% if(@event.errors.any?) %>
  <div class="errors-msg">
    <p>Verifique os erros abaixo:</p>
    <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>  
<% end %>

<%= form_with(model: [@venue, @event]) do |f| %>
  <div class="form-group col-md-8">
    <%= f.label :name %>
    <%= f.text_field :name, class:"form-control" %>
  </div>
  <div class="form-group col-md-8">
    <%= f.label :description %>
    <%= f.text_field :description, class:"form-control" %>
  </div>
  <div class="form-group col-md-4">
    <%= f.label :minimum_guests_number %>
    <%= f.number_field :minimum_guests_number, class:"form-control" %>
  </div>
  <div class="form-group col-md-4">
    <%= f.label :maximum_guests_number %>
    <%= f.number_field :maximum_guests_number, class:"form-control" %>
  </div>
  <div class="form-group col-md-4">
    <%= f.label :duration %>
    <%= f.number_field :duration, class:"form-control" %>
  </div>
  <div class="form-group col-md-8">
    <%= f.label :menu %>
    <%= f.text_area :menu, class:"form-control" %>
  </div>

  <div class="ckeck-box">
    <p>Servi√ßos opcionais oferecidos:</p>
    <div class="form-check">
      <%= f.label :has_alcoholic_drinks, class:"form-check-label" %>
      <%= f.check_box :has_alcoholic_drinks, class:"form-check-input" %>
    </div>
    <div class="form-check">
      <%= f.label :has_decorations, class:"form-check-label" %>
      <%= f.check_box :has_decorations, class:"form-check-input" %>
    </div>
    <div class="form-check">
      <%= f.label :has_parking_service, class:"form-check-label" %>
      <%= f.check_box :has_parking_service, class:"form-check-input" %>
    </div>
    <div class="form-check">
      <%= f.label :has_valet_service, class:"form-check-label" %>
      <%= f.check_box :has_valet_service, class:"form-check-input" %>
    </div>
    <div class="form-check">
      <%= f.label :can_be_catering, class:"form-check-label" %>
      <%= f.check_box :can_be_catering, class:"form-check-input" %>
    </div>
  </div>  

  <div class="form-button">
    <%= f.submit 'Enviar', class:"btn btn-secondary" %>
  </div>
<% end %>